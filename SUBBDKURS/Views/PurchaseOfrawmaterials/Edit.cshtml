@model DBMS.Models.PurchaseOfrawmaterials

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Закупка</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RawMaterials" class="control-label">Сырье</label>
                <select asp-for="RawMaterials" class="form-control" asp-items="ViewBag.RawMaterials"></select>
                <span asp-validation-for="RawMaterials" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountPur" class="control-label">Колво</label>
                <input asp-for="CountPur" class="form-control" />
                <span asp-validation-for="CountPur" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sum" class="control-label">Сумма</label>
                <input asp-for="Sum" class="form-control" />
                <span asp-validation-for="Sum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Дата</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee" class="control-label">Сотрудник</label>
                <select asp-for="Employee" class="form-control" asp-items="ViewBag.Employee"></select>
                <span asp-validation-for="Employee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-success" />
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-outline-primary">Назад</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
