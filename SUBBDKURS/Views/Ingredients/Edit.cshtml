@model DBMS.Models.Ingredients

@{
    ViewData["Title"] = "Edit";
}

<h1>Редактировать</h1>

<h4>Ингредиенты</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Product" class="control-label">Продукт</label>
                <select asp-for="Product" class="form-control" asp-items="ViewBag.Product"></select>
                <span asp-validation-for="Product" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RawMaterials" class="control-label">Сырье</label>
                <select asp-for="RawMaterials" class="form-control" asp-items="ViewBag.RawMaterials"></select>
                <span asp-validation-for="RawMaterials" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Countingred" class="control-label">Количество</label>
                <input asp-for="Countingred" class="form-control" />
                <span asp-validation-for="Countingred" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-outline-success" />
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-outline-primary">Назад</a>
            </div>
        </form>
    </div>
</div>


