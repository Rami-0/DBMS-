@model DBMS.Models.Ingredients

@{
    ViewData["Title"] = "Delete";
}

<h1>Удалить</h1>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Ингредиенты</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayName("Количество")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Countingred)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayName("Продукт")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductNavigation.Name)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayName("Сурье")
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RawMaterialsNavigation.Name)
        </dd class>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
         <input type="submit" value="Удалить" class="btn btn-outline-danger" /> 
         
        <div class="form-group">
            <a asp-action="Index" class="btn btn-outline-primary">Назад</a>
        </div>
    </form>
</div>
