@model IEnumerable<DBMS.Models.Rawmaterials>

@{
    ViewData["Title"] = "Index";
}

<h1>Сырье</h1>

<p>
    <a asp-action="Create">Добавить</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Наименование")
            </th>
            <th>
                @Html.DisplayName("Сумма")
            </th>
            <th>
                @Html.DisplayName("Колво")
            </th>
            <th>
                @Html.DisplayName("Единица измерение")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CountRawm)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitNavigation.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Обновить</a> |

                    <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
